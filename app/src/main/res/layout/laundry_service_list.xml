<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/ls_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="25dp"
        android:background="@color/second_green"
        android:backgroundTint="@color/cyan"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ls_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:autofillHints="Service name"
                android:padding="15dp"
                android:singleLine="true"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textColorHint="@color/text_color"
                android:textSize="15sp" />

            <View
                android:id="@+id/ls_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/ls_tv_name"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="7dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/black" />

            <TextView
                android:id="@+id/ls_tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ls_divider"
                android:autofillHints="Description"
                android:gravity="top|start"
                android:text="@string/description"
                android:padding="15dp"
                android:maxLines="10"
                android:textColor="@color/black"
                android:textColorHint="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ls_tv_rm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ls_tv_desc"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/rm"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ls_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ls_tv_desc"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/ls_tv_rm"
                android:text="@string/_0"
                android:textColor="@color/black"
                android:textColorHint="@color/text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ls_tv_for_each"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ls_tv_desc"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/ls_tv_price"
                android:text="@string/for_each"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ls_tv_price_for_each"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ls_tv_desc"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/ls_tv_for_each"
                android:text="@string/_0"
                android:textColor="@color/black"
                android:textColorHint="@color/text_color"
                android:textSize="16sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>