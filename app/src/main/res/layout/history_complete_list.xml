<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/hcl_iv_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_water" />

        <TextView
            android:id="@+id/hcl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/hcl_iv_icon"
            android:text="@string/laundry_terry"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hcl_tv_order_id_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hcl_iv_icon"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:text="@string/order_id"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/hcl_tv_show_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hcl_iv_icon"
            android:layout_marginStart="2dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/hcl_tv_order_id_"
            android:text="@string/_20ff3e3"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <View
            android:id="@+id/hcl_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/hcl_tv_order_id_"
            android:layout_marginStart="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="7dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/black" />

        <LinearLayout
            android:id="@+id/hcl_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hcl_divider"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:weightSum="4">

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>