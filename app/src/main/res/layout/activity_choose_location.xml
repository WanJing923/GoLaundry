<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_green"
    tools:context=".ChooseLocationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/cla_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nwa_tv_go_laundry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:fontFamily="@font/courgette_regular"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="5"
            android:shadowRadius="1"
            android:text="@string/go_laundry"
            android:textAlignment="center"
            android:textColor="#FFC0AB88"
            android:textSize="25sp" />
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/cla_et_choose_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/choose_custom"
        android:hint="@string/enter_a_location"
        android:inputType="text"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:drawableStart="@drawable/ic_location_gold"
        android:drawableEnd="@drawable/ic_search_gold"
        android:layout_below="@id/cla_toolbar"
        android:textSize="15sp"
        android:autofillHints="Enter a location" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nwa_btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cla_et_choose_address"
        android:layout_marginStart="23dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="23dp"
        android:backgroundTint="@color/cyan"
        android:padding="10dp"
        android:text="@string/choose_from_map"
        android:textColor="@color/black"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_map"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp" />

</RelativeLayout>