<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/second_green"
    tools:context=".view.SignUpFragment">

    <TextView
        android:id="@+id/fsu_tv_go_laundry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="62dp"
        android:fontFamily="@font/courgette_regular"
        android:gravity="center_horizontal|center_vertical"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="5"
        android:shadowRadius="1"
        android:text="@string/go_laundry"
        android:textAlignment="center"
        android:textColor="#FFC0AB88"
        android:textFontWeight="400"
        android:textSize="40sp"
        tools:targetApi="p" />

    <ImageView
        android:id="@+id/fsu_iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/fsu_tv_go_laundry"
        android:layout_centerInParent="true"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_person_add"
        android:contentDescription="@string/ic_login" />

    <TextView
        android:id="@+id/fsu_tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fsu_iv_icon"
        android:layout_centerInParent="true"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/create_an_account"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fsu_btn_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/button_custom"
        android:text="@string/user"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_below="@id/fsu_tv_signup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fsu_btn_laundry_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/button_custom"
        android:text="@string/laundry_shop_owner"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_below="@id/fsu_btn_user"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fsu_btn_rider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/button_custom"
        android:text="@string/rider"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_below="@id/fsu_btn_laundry_owner"
        />

</RelativeLayout>